@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="shortcut icon" href="#" />

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/Bootstrap/css/bootstrap.min.css" />
<!--datables CSS básico-->
<link rel="stylesheet" href="~/DataTables/datatables.min.css" />
<!--datables estilo bootstrap 4 CSS-->
<link rel="stylesheet" href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" />

<script src="~/jquery/jquery-3.3.1.min.js"></script>
<script src="~/popper/popper.min.js"></script>
<script src="~/Bootstrap/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="~/SweetAlert2/sweetalert2.min.css" />

<br />
<br />

<div class="card border-success mb-3" style="max-width: 80rem;">
    <div class="card-header">
        <strong><i class="fas fa-mouse"></i> PERIFERICOS</strong>

        <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modalperiferico"><i class="fas fa-plus"></i> Agregar periferico</button>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <strong><label>Buscar por código o nombre</label></strong>
                <input type="text" class="form-control" id="txtBuscar" placeholder="Código o nombre del periferico">
            </div>
            <div class="col-md-4">
                <strong><label>Buscar por categoría</label></strong>
                @Html.DropDownList("Datos", items, "Seleccione una catogoría", new { @class = "form-control" })
            </div>
        </div>

        <hr>

        <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12">
            <a class="thumbnail" href="@Url.Action("Producto", "Perifericos")">
                <span class="badge badge-danger">5</span>
                <img class="img-responsive" src="~/images/perifericos.jpg" style="width: 200px"/>
            </a>
            <span><strong>Monitor</strong></span>
        </div>

    </div>
</div>



<!-- The Modal -->
<div class="modal fade" id="modalperiferico">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><i class="fas fa-tv"></i> Agregar Periferico</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <input type="hidden" id="user_id" name="user_id" />
                <input type="text" id="txtCodigo" name="txtCodigo" class="form-control" placeholder="Codigo del producto">
                <br />
                <input type="text" id="txtNombre" name="txtNombre" class="form-control" placeholder="Nombre del producto">
                <br />
                @Html.DropDownList("Datos", items, "Seleccione la categoria", new { @class = "form-control"})
                <br />
                <textarea class="form-control" id="txtAsignado" name="txtAsignado" placeholder="Asignacion del producto" required maxlength="255"></textarea>
                <br />
                <input type="number" min="0" class="form-control" id="txtCantidad" name="txtCantidad" placeholder="Cantidad de producto" required maxlength="8">
                <br />
                <input type="text" class="form-control" id="txtMarca" name="txtMarca" placeholder="Marca del producto" required>
                <br />
                <input type="text" class="form-control" id="txtModelo" name="txtModelo" placeholder="Modelo del producto" required>
                <br />
                <input type="text" class="form-control" id="txtSerie" name="txtSerie" placeholder="Serie del producto" required>
                <br />
                <input type="text" class="form-control" id="txtTipo" name="txtTipo" placeholder="Tipo del producto" required>
                <br />
                <textarea class="form-control" id="txtUbicacion" name="txtUbicacion" placeholder="Ubicacion del producto" required maxlength="255"></textarea>
                <br />
                <input type="text" class="form-control" id="txtEstado" name="txtEstado" placeholder="Estado del producto" required>
                <br />
                <textarea class="form-control" id="txtObservaciones" name="txtObservaciones" placeholder="Observaciones del producto" required maxlength="255"></textarea>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div id="divBotones">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> Cancelar</button>
                    <button id="btnGuardar" type="button" class="btn btn-primary" data-dismiss="modal"><i class="far fa-save"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>