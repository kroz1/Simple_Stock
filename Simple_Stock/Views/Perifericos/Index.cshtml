<!-- The Modal -->
<div class="modal fade" id="modalperiferico">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><i class="fas fa-tv"></i> Agregar Periferico</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <input type="hidden" id="user_id" name="user_id" />
                <input type="text" id="txtCodigo" name="txtCodigo" class="form-control" placeholder="Codigo del producto">
                <br />
                <input type="text" id="txtNombre" name="txtNombre" class="form-control" placeholder="Nombre del producto">
                <br />
                <select class="browser-default custom-select">
                    <option selected>Seleccione la categoria</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <br />
                <br />
                <textarea class="form-control" id="txtAsignado" name="txtAsignado" placeholder="Asignacion del producto" required maxlength="255"></textarea>
                <br />
                <input type="number" min="0" class="form-control" id="txtCantidad" name="txtCantidad" placeholder="Cantidad de producto" required maxlength="8">
                <br />
                <input type="text" class="form-control" id="txtMarca" name="txtMarca" placeholder="Marca del producto" required>
                <br />
                <input type="text" class="form-control" id="txtModelo" name="txtModelo" placeholder="Modelo del producto" required>
                <br />
                <input type="text" class="form-control" id="txtSerie" name="txtSerie" placeholder="Serie del producto" required>
                <br />
                <input type="text" class="form-control" id="txtTipo" name="txtTipo" placeholder="Tipo del producto" required>
                <br />
                <textarea class="form-control" id="txtUbicacion" name="txtUbicacion" placeholder="Ubicacion del producto" required maxlength="255"></textarea>
                <br />
                <input type="text" class="form-control" id="txtEstado" name="txtEstado" placeholder="Estado del producto" required>
                <br />
                <textarea class="form-control" id="txtObservaciones" name="txtObservaciones" placeholder="Observaciones del producto" required maxlength="255"></textarea>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div id="divBotones">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> Cancelar</button>
                    <button id="btnGuardar" type="button" class="btn btn-primary" data-dismiss="modal"><i class="far fa-save"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>